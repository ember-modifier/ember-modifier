{
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/ember-modifier/ember-modifier.git"
  },
  "scripts": {
    "build": "pnpm --filter ember-modifier build",
    "lint": "pnpm --filter '*' lint",
    "lint:fix": "pnpm --filter '*' lint:fix",
    "prepare": "pnpm build",
    "release": "release-it",
    "start": "concurrently 'pnpm:start:*' --restart-after 5000 --prefix-colors cyan,white,yellow",
    "start:addon": "pnpm --filter ember-modifier start --no-watch.clearScreen",
    "start:test-app": "pnpm --filter test-app start",
    "test": "pnpm --filter '*' test",
    "test:ember": "pnpm --filter '*' test:ember"
  },
  "devDependencies": {
    "@release-it-plugins/lerna-changelog": "^7.0.0",
    "@release-it-plugins/workspaces": "^4.2.0",
    "concurrently": "^9.0.0",
    "release-it": "^17.6.0"
  },
  "volta": {
    "node": "18.20.3"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "pnpm": {
    "overrides": {
      "@types/eslint": "^7.0.0"
    }
  },
  "packageManager": "pnpm@8.15.8",
  "release-it": {
    "hooks": {
      "after:bump": "pnpm install",
      "before:init": "cp README.md LICENSE.md ember-modifier/"
    },
    "plugins": {
      "@release-it-plugins/lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": false
      },
      "@release-it-plugins/workspaces": {
        "workspaces": [
          "ember-modifier"
        ]
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "releaseName": "v${version}",
      "tokenRef": "GITHUB_AUTH"
    },
    "npm": false
  },
  "version": "4.2.0"
}
